extends ../templates/header

block content
  main(class='bet-container')    
    section(class='bet-section')      
      div(class='bet-wrap-frm')
        h3.bet-label Crear Cuenta
        form(action='http://localhost:3000/auth/signup' class='bet-frm' method='post' autocomplete='off' enctype='application/x-www-form-urlencoded')          
          fieldset(class='frm-group-col')
            //- label(for="email")= 'Email'
            input(type='email' name='email' id='email' placeholder='Email' class='frm-control' pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,}$" required)
          fieldset(class='frm-group-col')
            //- label(for="nombre")= 'Nombre'              
            input(type='nombre' name='nombre' id='nombre' placeholder='Nombre Completo' class='frm-control' pattern="[A-Za-z- ]{5,}" title="Three letter country code" required)
          fieldset(class='frm-group-col')
            //- label(for="password")= 'Password'
            input(type='password' name='password' id='password' placeholder='Password (8 caracteres o más)' class='frm-control' pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
            title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters" required)
            span#view-pass.view-pass(hidde) <i class="far fa-eye-slash"></i>         
          div(class='frm-group-row' id='bet-country')
            <input type="image" id="bet-flags" src="" class='frm-control'><input id="myInput" type="text" name="myCountry" placeholder="Country" class='frm-control' title='Debes seleeccionar tu país de residencia' required>
          button(type="submit" id='bet-submit' class='bet-btn')= 'Registrarme'

  include ../templates/footer
